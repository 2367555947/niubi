<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_ima"
        android:background="@mipmap/ic_launcher_round"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_zhang"
        android:layout_below="@id/image_ima"
        android:text="账号:"
        android:textSize="20sp"
        android:layout_marginLeft="90dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_acc"
        android:layout_toRightOf="@id/text_zhang"
        android:layout_below="@id/image_ima"
        android:hint="请输入账号"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_mima"
        android:layout_below="@id/edit_acc"
        android:text="密码:"
        android:textSize="20sp"
        android:layout_marginLeft="90dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_pwd"
        android:hint="请输入密码"
        android:layout_below="@id/edit_acc"
        android:layout_toRightOf="@id/text_mima"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动登录"
        android:id="@+id/checkbox_deng"
        android:layout_below="@id/edit_pwd"
        android:layout_marginLeft="110dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_deng"
        android:layout_below="@id/checkbox_deng"
        android:text="登录"
        android:layout_marginLeft="100dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_zhuce"
        android:layout_below="@id/checkbox_deng"
        android:text="注册"
        android:layout_marginLeft="260dp"
        />
    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/btn_zhuce"
        android:text="第三方登录"
        />
</RelativeLayout>